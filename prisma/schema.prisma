// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String    @db.VarChar(100)
  email     String    @unique @db.VarChar(255)
  password  String    @db.VarChar(255) // Store hashed password
  recipes   Recipe[]  // One-to-many: A user can create many recipes
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Recipe {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(150)
  description String?  @db.Text
  ingredients String   @db.Text         // Store as string or JSON
  steps       String   @db.Text         // You can split by newline if needed
  imageUrl    String?  @db.VarChar(500)
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([authorId])
}
